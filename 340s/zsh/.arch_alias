alias pac="sudo pacman"
alias pacr="sudo pacman -Rnc"
alias pacar="pacman -Qtdq | sudo pacman -Rns"
alias paci="sudo pacman -S"
alias pacs="sudo pacman -Ss"
alias vim="nvim"

function pacup() {
	yay -Syyuu --noconfirm;
	yay -S --rebuild --answerclean A --answerdiff N $(checkrebuild | cut -d$'\t' -f2)
}
